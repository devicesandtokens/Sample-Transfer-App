<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.interswitchng.interswitchpos">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-permission android:name="com.pax.permission.ICC"/>
    <uses-permission android:name="com.pax.permission.PICC"/>
    <uses-permission android:name="com.pax.permission.MAGCARD"/>
    <uses-permission android:name="com.pax.permission.PRINTER"/>
    <uses-permission android:name="com.pax.permission.PED"/>

    <application
        android:name="com.interswitchng.interswitchpos.POSApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo_image"
        android:label="Smart POS APP t"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="com.interswitchng.interswitchpos.views.activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.interswitchng.interswitchpos.views.fragments.TerminalSettingFragment"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>